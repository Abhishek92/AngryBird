<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <!-- <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">-->


        <LinearLayout
            android:id="@+id/activity_add_edit_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.android.angrybird.activity.AddEditUserActivity">

            <TextView
                android:id="@+id/desc_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/particularEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Particular"
                android:maxLength="255"
                android:maxLines="4"
                android:singleLine="true" />

            <EditText
                android:id="@+id/dateEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="false"
                android:hint="Date"
                android:inputType="date"
                android:singleLine="true" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/debitAmtEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Debit Amount"
                    android:inputType="numberDecimal"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/debitWeightEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Debit Weight"
                    android:inputType="numberDecimal"
                    android:singleLine="true" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/creditAmtEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Credit Amount"
                    android:inputType="numberDecimal"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/creditWeightEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Credit Weight"
                    android:inputType="numberDecimal"
                    android:singleLine="true" />
            </LinearLayout>

            <EditText
                android:id="@+id/aliasEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Alias No"
                android:inputType="number"
                android:maxLength="4"
                android:singleLine="true" />
            <!--<ImageView
                android:id="@+id/item_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_account_circle_black_24dp"
                android:scaleType="centerCrop"/>

            <HorizontalScrollView
                android:id="@+id/horizontalSv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:id="@+id/img_container"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:orientation="horizontal"/>
            </HorizontalScrollView>

            <EditText
                android:id="@+id/dateEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Date"
                android:focusable="false"
                android:inputType="date"
                android:singleLine="true" />

            <EditText
                android:id="@+id/particularEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Particular"
                android:maxLength="255"
                android:maxLines="4"
                android:singleLine="true" />

            <EditText
                android:id="@+id/debitAmtEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Debit Amount"
                android:inputType="numberDecimal"
                android:singleLine="true" />

            <EditText
                android:id="@+id/creditAmtEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Credit Amount"
                android:inputType="numberDecimal"
                android:singleLine="true" />

            <EditText
                android:id="@+id/debitWeightEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Debit Weight"
                android:inputType="numberDecimal"
                android:singleLine="true" />

            <EditText
                android:id="@+id/creditWeightEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Credit Weight"
                android:inputType="numberDecimal"
                android:singleLine="true" />


            <Button
                android:id="@+id/submitBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Submit"
                android:textAllCaps="true" />

-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/divider"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="64dp"
                android:gravity="left"
                android:text="Add Image"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimaryDark" />

            <HorizontalScrollView
                android:id="@+id/horizontalSv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/img_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include
                        android:id="@+id/item_image"
                        layout="@layout/add_more_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/submitBtn"
                style="@style/buttonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="Save"
                android:textAllCaps="true" />

        </LinearLayout>


        <!--</RelativeLayout>-->

    </ScrollView>


</layout>

