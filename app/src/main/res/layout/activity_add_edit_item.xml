<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/activity_add_edit_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.android.angrybird.activity.AddEditUserActivity">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_account_circle_black_24dp"
                android:scaleType="centerCrop"/>

            <EditText
                android:id="@+id/dateEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Date"
                android:focusable="false"
                android:inputType="date"
                android:singleLine="true" />

            <EditText
                android:id="@+id/particularEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Particular"
                android:maxLength="255"
                android:maxLines="4"
                android:singleLine="true" />

            <EditText
                android:id="@+id/debitAmtEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Debit Amount"
                android:inputType="numberDecimal"
                android:singleLine="true" />

            <EditText
                android:id="@+id/creditAmtEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Credit Amount"
                android:inputType="numberDecimal"
                android:singleLine="true" />

            <EditText
                android:id="@+id/debitWeightEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Debit Weight"
                android:inputType="numberDecimal"
                android:singleLine="true" />

            <EditText
                android:id="@+id/creditWeightEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Credit Weight"
                android:inputType="numberDecimal"
                android:singleLine="true" />


            <Button
                android:id="@+id/submitBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Submit"
                android:textAllCaps="true" />


        </LinearLayout>


    </ScrollView>


</layout>

